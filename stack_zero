#include <stdlib.h>
#include <unistd.h>
#include <stdio.h>

int main(int argc, char const *argv[])
{
    volatile int motifield;
    char buffer[64];

    motifield = 0;
    gets(buffer);

    if (motifield != 0)
    {
        printf("você mudou a variável 'modificada'\n");
    }
    else
    {
        printf("tente de novo\n");
    }

    return 0;
}
